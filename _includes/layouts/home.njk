            <h4>
              {{ post.data.title }}
          {%- endfor -%}
            </h4></a>
        </li>

        <li class="article-wrapper">
          {%- for post in collections.colorcontrast | reverse -%}
          <a href="{{ post.url }}"><img src="/img/fieldnotes.jpg" alt="Some FieldNotes Brand notebooks on a desk" loading="lazy" data-src="/img/fieldnotes.jpg" class="lazyload" />
            <h4>
              {{ post.data.title }}
          {%- endfor -%}
            </h4></a>
        </li>
      </ul>
    </div>
  </main>