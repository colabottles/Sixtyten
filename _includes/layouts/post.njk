---
layout: layouts/base.njk
templateClass: tmpl-post
---
  <article>
    <figure class="article__featured-image-container">
      <img src="/img/fieldnotes.jpg"
        alt="Field Notes Brand memo books" class="article__featured-image">
    </figure>

    <header class="article__header" role="banner">
      <div class="article__meta">
        <time>{{page.date | htmlDateString}}</time>
      </div>
      <h1 class="article__title">
        {{title}}
      </h1>
      <span class="article__author">
        by Todd
      </span>
    </header>

    <section class="article__body" role="region">
      {{ content | safe }}
    </section>
  </article>