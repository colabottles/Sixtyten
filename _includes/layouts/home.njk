  <div class="articles">
    <h3>Latest Articles</h3>
      <ul class="article-sections">
        <li class="article-wrapper">
          {%- for post in collections.staycation | reverse -%}
          <a href="{{ post.url }}">
            <img src="https://res.cloudinary.com/colabottles/image/upload/v1611591059/images/staycation.jpg" alt="A person sitting on a bed or couch and holding a coffee mug in one hand and reading a book an dturning a page with the other hand." loading="lazy" data-src="https://res.cloudinary.com/colabottles/image/upload/v1611591059/images/staycation.jpg" class="lazyload" />
